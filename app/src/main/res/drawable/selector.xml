<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
            </padding>
            <stroke android:width="2dip" android:color="#24e4f5" />
            <gradient  android:angle="-90"  android:startColor="#f93de0" android:endColor="#66005c"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
            </padding>
            <stroke android:width="2dip" android:color="#23bbc9" />
            <gradient  android:angle="-90"  android:startColor="#63a3e2" android:endColor="#256ef5" />
        </shape>
    </item>
</selector>